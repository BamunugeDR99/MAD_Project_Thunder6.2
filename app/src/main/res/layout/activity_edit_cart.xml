<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    app:contentPadding="10dp"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="202dp"
        android:padding="10dp">

        <ImageView

            android:id="@+id/food_image"
            android:layout_width="103dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cake3" />

        <TextView
            android:id="@+id/foodNtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/food_image"
            android:text="Food Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodDtext"
            android:layout_width="245dp"
            android:layout_height="61dp"
            android:layout_below="@id/foodNtext"
            android:layout_marginLeft="29dp"
            android:layout_toRightOf="@id/food_image"
            android:text="Description"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/foodPStext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodDtext"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/food_image"
            android:text="Price: LKR."
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />


        <!--            <ImageButton-->
        <!--                android:id="@+id/increment1"-->
        <!--                android:layout_width="29dp"-->
        <!--                android:layout_height="45dp"-->
        <!--                android:layout_marginEnd="35dp"-->
        <!--                android:layout_marginRight="350dp"-->
        <!--                android:layout_marginBottom="6dp"-->
        <!--                android:layout_toEndOf="@+id/decrement"-->
        <!--                android:layout_toRightOf="@+id/decrement"-->
        <!--                android:backgroundTint="@color/purple_500"-->
        <!--                app:srcCompat="@drawable/ic_baseline_add_24"-->
        <!--                tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck,TouchTargetSizeCheck" />-->

        <TextView
            android:id="@+id/foodPtext"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodDtext"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/foodPStext"
            android:text="Price"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="131dp"
            android:id="@+id/btn_delete"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="14dp"
            android:text="Remove" />

        <ImageButton
            android:id="@+id/increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/foodPtext"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/quantitys"
            android:layout_toRightOf="@+id/quantitys"
            app:srcCompat="@drawable/ic_baseline_add_24"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/decrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodPStext"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="229dp"
            android:layout_marginLeft="229dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_baseline_remove_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/quantitys"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/foodPtext"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/decrement"
            android:layout_toRightOf="@+id/decrement"
            android:text="1" />

        <!--            <ImageButton-->
        <!--                android:id="@+id/decrement1"-->
        <!--                android:layout_width="30dp"-->
        <!--                android:layout_height="45dp"-->
        <!--                android:layout_marginRight="100dp"-->
        <!--                android:layout_marginBottom="6dp"-->
        <!--                android:backgroundTint="@color/purple_500"-->
        <!--                app:srcCompat="@drawable/ic_baseline_remove_24"-->
        <!--                tools:ignore="VectorDrawableCompat,SpeakableTextPresentCheck" />-->


    </RelativeLayout>


</androidx.cardview.widget.CardView>