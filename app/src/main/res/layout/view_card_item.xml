<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"

    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/back_design4"
        android:padding="15dp">


        <ImageView
            android:id="@+id/Image1"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/Crd_Name"
            android:layout_width="215dp"
            android:layout_height="23dp"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/Image1"
            android:text="Card Owner"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/Crd_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Crd_Name"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/Image1"
            android:text="Card Number"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/Crd_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Crd_Number"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/Image1"
            android:text="Expiration date"
            android:textColor="@color/white"
            android:textSize="16sp"></TextView>

        <Button
            android:id="@+id/BTN_Select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Image1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="223dp"
            android:layout_marginRight="223dp"
            android:layout_marginBottom="3dp"
            android:onClick="@string/BTN_Select"
            android:backgroundTint="#4CAF50"
            android:text="@string/BTN_Select"
            android:textAllCaps="false"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/BTN_REMOVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Image1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="#FF0202"
            android:layout_marginBottom="0dp"
            android:text="@string/BTN_REMOVE"
            android:textAllCaps="false"
            android:textSize="10sp"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>

