<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BFBFBF"

    android:backgroundTint="#B6B6B6"
    android:elevation="8dp"
    app:cardBackgroundColor="#B8B8B8"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#ffffff"
        android:hapticFeedbackEnabled="true"
        android:padding="15dp">


        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/rev_name"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/img"
            android:text="Item Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"></TextView>

        <RatingBar
            android:id="@+id/rating"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev_name"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:clickable="false"
            android:numStars="5" />

        <TextView
            android:id="@+id/rev_review"
            android:layout_width="250dp"
            android:layout_height="36dp"
            android:layout_below="@+id/rating"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img"

            android:text="Review"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal"></TextView>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev_review"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4CAF50"
            android:text="Edit Review"
            android:textSize="16sp"></Button>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rev_review"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/btn_edit"
            android:backgroundTint="#F44336"
            android:text="Delete Review"
            android:textSize="16sp"></Button>

    </RelativeLayout>


</androidx.cardview.widget.CardView>